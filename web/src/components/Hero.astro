---
interface Props {
  title?: string;
  subtitle?: string;
  image?: string;
}
const { title = 'Jetzt raus â€“ Erleben', subtitle = '', image = 'lagerfeuer-bg' } = Astro.props as Props;
---

<section class="relative py-28 bg-brand-secondary text-white">
  <picture aria-hidden="true" class="absolute inset-0 -z-10">
    <source type="image/webp" srcset={`/images/${image}-400.webp 400w, /images/${image}-800.webp 800w, /images/${image}-1200.webp 1200w`} />
    <img src={`/images/${image}-400.jpg`} srcset={`/images/${image}-400.jpg 400w, /images/${image}-800.jpg 800w, /images/${image}-1200.jpg 1200w`} sizes="100vw" alt="" class="w-full h-full object-cover" loading="lazy" />
  </picture>

  <div class="container-custom">
    <h1 class="text-4xl md:text-6xl font-bold">{title}</h1>
    {subtitle && <p class="mt-4 text-lg">{subtitle}</p>}
  </div>
</section>
